#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

&trackball {
    // automouse-layer = <4>;

    scroll-layers = <5>;

    arrows {
        layers = <3>;
        bindings =
            <&kp RIGHT_ARROW>,
            <&kp LEFT_ARROW>,
            <&kp UP_ARROW>,
            <&kp DOWN_ARROW>;

        tick = <10>;
        wait-ms = <5>;
        tap-ms = <5>;
    };
};

/ {
    combos {
        compatible = "zmk,combos";

        Escape {
            bindings = <&kp ESCAPE>;
            key-positions = <1 2>;
        };

        BS {
            bindings = <&kp BACKSPACE>;
            key-positions = <6 7>;
        };

        Delete {
            bindings = <&kp DEL>;
            key-positions = <7 8>;
        };

        Home {
            bindings = <&kp HOME>;
            key-positions = <18 19>;
        };

        End {
            bindings = <&kp END>;
            key-positions = <19 20>;
        };

        InputoMode {
            bindings = <&kp GRAVE>;
            key-positions = <13 18>;
        };

        UnderBar {
            bindings = <&UnderScore>;
            key-positions = <5 17>;
        };

        L_kakko {
            bindings = <&L_KAKKO>;
            key-positions = <6 18>;
        };

        D_quote {
            bindings = <&DQ>;
            key-positions = <7 19>;
        };

        R_kakko {
            bindings = <&R_KAKKO>;
            key-positions = <8 20>;
        };

        LB {
            bindings = <&kp RBKT>;
            key-positions = <18 30>;
        };

        RB {
            bindings = <&kp NUHS>;
            key-positions = <20 32>;
        };

        SingleQ {
            bindings = <&SQ>;
            key-positions = <19 31>;
        };
    };

